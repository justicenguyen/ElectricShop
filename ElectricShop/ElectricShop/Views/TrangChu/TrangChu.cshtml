@model ElectricShop.Models.DuLieuTrangChu
@{
    ViewData["Title"] = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Partial("_SlideKhuyenMai")
<h4>Latest Products </h4>
<ul class="thumbnails">
    @foreach (var spht in Model.dssanphamhienthi)
    {
        <li class="span3">
            <div class="thumbnail">
                <a asp-controller="SanPham" asp-action="ChiTiet" asp-route-id="@spht.TenSPKhongDau"><img src="~/@spht.HinhAnh" alt="" /></a>
                <div class="caption">
                    <h5 style="color:red;text-align:center;">@spht.TenSPCoDau</h5>
                    <p>
                        <h4>@spht.GiaGiam vnđ</h4>
                    </p>
                    <p>
                        <h5 style="text-decoration:line-through">@spht.GiaGiam vnđ</h5>
                    </p>
                    <h4 style="text-align:center"><a class="btn" asp-controller="SanPham" asp-action="ChiTiet" asp-route-id="@spht.TenSPKhongDau"> <i class="icon-zoom-in"></i></a> <a class="btn" href="#">Add to <i class="icon-shopping-cart"></i></a> </h4>
                </div>
            </div>
        </li>
    }
</ul>

<div class="well well-small">
    <h4>Sản phẩm bán chạy</h4>
    @{ int flag = 1;}
    <div class="row-fluid">
        <div id="featured" class="carousel slide">
            <div class="carousel-inner">

                @for (int i = 0; i < Model.dssanphambanchay.Count(); i++)
                {
                    int t = i + 1;
                    if (i % 3 == 0)
                    {
                        if (flag == 1)
                        {
                            @:<div class="item active">
                            flag =0;
                        }
                        else
                        {
                            @:<div class="item">

                        }
                            @:<ul class="thumbnails">
                    }
                    <li class="span4">
                        <div class="thumbnail">
                            <a asp-controller="SanPham" asp-action="ChiTiet" asp-route-id="@Model.dssanphambanchay[i].TenSPKhongDau"><img src="~/@Model.dssanphambanchay[i].HinhAnh" alt=""></a>
                            <div class="caption">
                                <h6 style="text-align:center;">@Model.dssanphambanchay[i].TenSPCoDau</h6>
                                <h4><a class="btn" asp-controller="SanPham" asp-action="ChiTiet" asp-route-id="@Model.dssanphambanchay[i].TenSPKhongDau">VIEW</a> <span class="pull-right">@Model.dssanphambanchay[i].Gia</span></h4>
                            </div>
                        </div>
                    </li>
                    if (t % 3 == 0)
                        {
                            @:</ul>
                            @:</div>
                        }   
                }
            </div>
            <a class="left carousel-control" href="#featured" data-slide="prev">&lsaquo;</a>
            <a class="right carousel-control" href="#featured" data-slide="next">&rsaquo;</a>
        </div>
    </div>
</div>
</div>


